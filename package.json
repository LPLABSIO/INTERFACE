{
  "name": "ios-automation-platform",
  "version": "0.2.0",
  "description": "Plateforme professionnelle d'automatisation iOS multi-appareils",
  "main": "src/ui/main/main.js",
  "scripts": {
    "ui": "electron src/ui/main/main.js",
    "bot": "node src/bot/bot.js",
    "multi": "node src/bot/multi.js",
    "dev": "electron src/ui/main/main.js --dev",
    "api": "node src/api/server.js",
    "api:dev": "nodemon src/api/server.js",
    "api:test": "jest src/api/tests/",
    "start": "node src/api/server.js",
    "build:mac": "electron-builder --mac --config config/build/electron-builder.yml",
    "build:win": "electron-builder --win --config config/build/electron-builder.yml",
    "test": "jest",
    "test:ui": "lerna run test",
    "clean": "rm -rf dist build node_modules",
    "clean:old": "rm -rf AppiumUI electron",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.{js,json,css,html}\"",
    "setup": "npm install && node scripts/setup.js",
    "appium": "sh scripts/start_appium.sh",
    "bootstrap": "lerna bootstrap",
    "packages:install": "lerna bootstrap --hoist",
    "packages:build": "lerna run build",
    "packages:test": "lerna run test",
    "packages:publish": "lerna publish",
    "test:projects": "jest src/projects/__tests__",
    "generate:project": "node src/projects/generator/cli.js",
    "projects:list": "node scripts/list-projects.js",
    "projects:validate": "node scripts/validate-projects.js"
  },
  "workspaces": [
    "packages/@shared/*",
    "packages/@apps/*",
    "packages/@ui/*"
  ],
  "keywords": [
    "ios",
    "automation",
    "appium",
    "electron",
    "multi-device",
    "webdriver"
  ],
  "author": "Automation Platform Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LPLABSIO/INTERFACE.git"
  },
  "dependencies": {
    "@fast-csv/format": "^5.0.5",
    "@turf/turf": "^7.2.0",
    "axios": "^1.9.0",
    "body-parser": "^2.2.0",
    "chart.js": "^4.5.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.2",
    "electron": "^31.3.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "fs-extra": "^11.3.1",
    "helmet": "^8.1.0",
    "imapflow": "^1.0.195",
    "mailparser": "^3.7.4",
    "path": "^0.12.7",
    "socket.io": "^4.8.1",
    "uuid": "^13.0.0",
    "webdriverio": "^9.19.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "lerna": "^8.2.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.0.3",
    "socket.io-client": "^4.8.1",
    "supertest": "^6.3.4"
  },
  "build": {
    "appId": "com.automation.ios.platform",
    "productName": "iOS Automation Platform",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
